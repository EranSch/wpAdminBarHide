{
	"manifest_version": 2,

	"name": "WP Admin Bar Hider",
	"version": "0.1",
	"description": "One-click, per-domain WP admin bar removal!",
	
	"browser_action": {
		"default_icon": {
			"19": "img/icon19_0.png",
			"38": "img/icon38.png"
		},
		"default_title": "WP Admin Bar Hider"
	},
	
	"permissions": [
		"tabs", "*://*/*"
	],
  
	"background":{
		"scripts":["lib/brain.js"]
	}
	
}