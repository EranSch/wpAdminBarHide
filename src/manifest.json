{
	"manifest_version": 2,

	"name": "Wordpress Admin Bar Control",
	"short_name": "WP Admin Bar Hider",
	"version": "1.1.1",
	"description": "Hide & show the admin bar with one easy click!",
	
	"browser_action": {
		"default_icon": {
			"19": "img/icon19_0.png",
			"38": "img/icon38_0.png"
		},
		"default_title": "WP Admin Bar Hider"
	},
	
	"permissions": [
		"storage",
		"tabs",
		"*://*/*"
	],
  
	"background":{
		"scripts":["lib/brain.js"]
	},

	"icons": {
		"128": "img/icon128.png"
	}
	
}